{
    "compilerOptions": {
        "target": "es6",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "jsx": "react",
        "jsxFactory": "element",
        "jsxFragmentFactory": "fragment"
    },
    "baseUrl": "src",
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
